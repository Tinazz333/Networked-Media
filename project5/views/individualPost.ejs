<div class="post">

  <a href="/post/<%=post._id%>">
    <% if(post.image) { %>
    <img src="<%=post.image %>" />
    <% } %>
  </a>
  
  <form method="POST" action="/remove">
    <input type="submit" value="Delete" />
    <input type="hidden" name="postId" value="<%=post._id%>" />
  </form>

</div>
